extends layouts/layout

block vars
	- var title = 'Grig.'
	- var keywords = 'Agência Digital'
	- var description = 'Grig. é uma nova agência digital formada por uma equipe com mais de 10 anos de experiência no mercado de desenvolvimento web e marketing digital.'

block content
	include includes/header.pug
	include includes/banner.pug
	
	section.quem-somos#quem-somos
		h2 Quem Somos
		p Somos uma empresa jovem, formada por uma equipe de profissionais com mais de 10 anos de experiência em desenvolvimento Web e Marketing Digital.
		p Trabalhamos com o conceito de Agência Digital, buscamos sempre usar as melhores ferramentas e tecnologias para criar a solução essencial para a sua empresa.
		
	section.services#services
		.container
			.item-wrapper
				header.item-title
					img(src="assets/images/icon-sites.svg", alt="Desenvolvimento de Sites")
					h3 Desenvolvimento de Sites
				.item-desc
					p Somos especialistas em criação de sites, planejamos e desenvolvemos sites estáticos e dinâmicos, com Design exclusivo, prezando sempre por qualidade e velocidade.

			.item-wrapper
				header.item-title
					img(src="assets/images/icon-target.svg", alt="SEO")
					h3 Performance Web - SEO
				.item-desc
					p Otimizamos seu site para que ele possa se tornar mais relevante nos resultados dos principais sistemas de busca como Google, Bing e Yahoo.

			.item-wrapper
				header.item-title
					img(src="assets/images/icon-cms.svg", alt="CMS - Gerencie seu site")
					h3 CMS - Gerencie seu site
				.item-desc
					p Desenvolvemos e implementamos sistemas de gerenciamento de conteúdo, tornando a manutenção do conteúdo do seu site tão fácil e ágil como as redes sociais.
								
	section.clients#clients
		.container
			h2 Alguns de nossos Clientes
			ul.list-clients
				li
					a(href="http://monkeybuzz.com.br/", target="_blank") MonkeyBuzz
				li
					a(href="http://nimboos.com.br/", target="_blank") Nimboos
				li
					a(href="http://www.protervac.com.br", target="_blank") Protervac
				li
					a(href="http://www.parceirosdaeducacao.org.br/", target="_blank") Parceiros da Educação
				li
					a(href="http://www.movimentarte.com/", target="_blank") MovimentARTE
				li
					a(href="http://thekingcake.com.br", target="_blank") The King Cake
				
	section.contato#contato
		h2 Contato
		
		form(method="POST")
			.form-input
				input(name="nome", type="name", placeholder="Nome", required)
				span.required •
			.form-input
				input(name="email", type="email", placeholder="Email", required)
				span.required •
			.form-input
				input(name="phone", type="phone", placeholder="Telefone", required)
				span.required •
			input(name="empresa", type="name", placeholder="Empresa")
			input(name="url", type="name", placeholder="Url do Site")
			.message-required
				textarea(name="message", placeholder="Mensagem", required)
				span.required •
			input(type="submit", class="btn-default", value="Enviar")

	include includes/footer.pug
