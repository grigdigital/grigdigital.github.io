					p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
				
	section.clients#clients
		.container
			h2 Alguns de nossos Clientes
			ul.list-clients
				li
					a(href="http://monkeybuzz.com.br/", target="_blank") MonkeyBuzz
				li
					a(href="http://nimboos.com.br/", target="_blank") Nimboos
				li
					a(href="http://www.parceirosdaeducacao.org.br/", target="_blank") Parceiros da Educação
				li
					a(href="http://www.movimentarte.com/", target="_blank") MovimentARTE
				li
					a(href="http://thekingcake.com.br", target="_blank") The King Cake
				
	section.contato#contato
		h2 Contato
		
		form(method="POST")
			input(name="nome", type="name", placeholder="Nome", required)
			input(name="email", type="email", placeholder="Email", required)
			input(name="phone", type="phone", placeholder="Telefone", required)
			input(name="empresa", type="name", placeholder="Empresa")
			input(name="url", type="name", placeholder="Url do Site")
			textarea(name="message", placeholder="Mensagem", required)
			input(type="button", class="btn-default", value="Enviar")

	include includes/footer.pug
